<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://jboss.org/schema/arquillian"
	xsi:schemaLocation="
        http://jboss.org/schema/arquillian
        http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

	<!-- Force the use of the Servlet 3.0 protocol with all containers, as it 
		is the most mature -->

	<defaultProtocol type="Servlet 3.0" />


    <container qualifier="chameleon" default="true">
        <configuration>
            <property name="chameleonTarget">${arquillian.container}</property>
			<property name="javaVmArguments">-Xmx300m -XX:MaxPermSize=256m 
                -Duser.country=US -Duser.language=en -Duser.timezone=GMT-03:00
            </property>
			
        </configuration>
    </container>

	<extension qualifier="webdriver">
		<property name="browser">${arquillian.browser}</property>
        <property name="chromeDriverBinary">${arquillian.chromeDriver}</property>
        <property name="dimensions">1280x1024</property>
	</extension>

</arquillian>
